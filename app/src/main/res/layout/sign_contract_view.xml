<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center"
    android:background="@android:color/transparent"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:background="@drawable/shape_rect_angle_white_bg"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_marginStart="36dip"
        android:layout_marginEnd="36dip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:background="@color/text_blue"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:paddingTop="16dip"
                android:paddingBottom="12dip"
                android:text="继续操作"
                android:textColor="@color/white"
                android:textSize="16sp" />
            <ImageView
                android:id="@+id/ivCancel"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="12dip"
                android:padding="10dip"
                android:src="@android:drawable/ic_menu_close_clear_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>

        <LinearLayout
            android:gravity="center|center_vertical"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dip"
                android:layout_marginEnd="12dip"
                android:gravity="center"
                android:paddingTop="12dip"
                android:paddingBottom="12dip"
                android:text="系统将会向您的手机号发送一条签约短信，\n请点击短信中的链接。"
                android:textColor="@color/text_black"
                android:textSize="14sp" />

        </LinearLayout>

        <View
            android:layout_marginTop="12dip"
            android:background="@color/divider_grey"
            android:layout_width="match_parent"
            android:layout_height="1dip"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dip"
            android:layout_marginBottom="12dip"
            android:gravity="center"
            android:paddingTop="12dip"
            android:paddingBottom="12dip"
            android:text="操作完成后返回本页， 点击“短信签约完成。"
            android:textColor="@color/text_blue"
            android:textSize="14sp" />
        <TextView
            android:id="@+id/tvConfirm"
            android:gravity="center"
            android:paddingTop="12dip"
            android:paddingBottom="12dip"
            android:text="确定"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:background="@drawable/shape_rect_angle_sky_blue_bg"
            android:layout_marginStart="32dip"
            android:layout_marginEnd="32dip"
            android:layout_marginBottom="32dip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</RelativeLayout>