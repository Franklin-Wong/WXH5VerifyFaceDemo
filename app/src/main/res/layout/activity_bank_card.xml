<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".ui.center.BankCardActivity">
    <include layout="@layout/title_bar_layout"/>

    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/rlAddCard"
        android:background="@drawable/shape_bg_rectangle_dash_stroke"
        android:paddingBottom="20dip"
        android:paddingTop="20dip"
        android:layout_marginTop="28dip"
        android:layout_marginStart="16dip"
        android:layout_marginEnd="16dip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tvAddNewCard"
            android:textSize="16sp"
            android:text="添加银行卡"
            android:textColor="@color/text_black"
            android:layout_gravity="center"
            android:drawableLeft="@mipmap/ic_add_card"
            android:drawablePadding="6dip"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>


    <LinearLayout
        android:id="@+id/llCard"
        android:visibility="visible"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:gravity="end"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:text="持卡人"
                android:paddingTop="14dip"
                android:paddingBottom="14dip"
                android:paddingEnd="6dip"
                android:paddingStart="6dip"
                android:textSize="14sp"
                android:gravity="end"
                android:textColor="@color/text_light_gray"
                android:background="@color/white"
                android:layout_marginEnd="12dip"
                android:layout_marginStart="12dip"
                android:layout_marginLeft="12dip"
                android:layout_marginRight="12dip"
                android:layout_marginTop="0dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <View
                android:background="@color/bg_blue"
                android:layout_width="match_parent"
                android:layout_height="1dip"/>
            <TextView
                android:text="银行卡号"
                android:paddingTop="14dip"
                android:paddingBottom="14dip"
                android:paddingEnd="6dip"
                android:paddingStart="6dip"
                android:textSize="14sp"
                android:gravity="end"
                android:textColor="@color/text_light_gray"
                android:background="@color/white"
                android:layout_marginEnd="12dip"
                android:layout_marginStart="12dip"
                android:layout_marginLeft="12dip"
                android:layout_marginRight="12dip"
                android:layout_marginTop="0dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <View
                android:background="@color/bg_blue"
                android:layout_width="match_parent"
                android:layout_height="1dip"/>
            <TextView
                android:text="开户行全称"
                android:paddingTop="14dip"
                android:paddingBottom="14dip"
                android:paddingEnd="6dip"
                android:paddingStart="6dip"
                android:textSize="14sp"
                android:gravity="end"
                android:textColor="@color/text_light_gray"
                android:background="@color/white"
                android:layout_marginEnd="12dip"
                android:layout_marginStart="12dip"
                android:layout_marginLeft="12dip"
                android:layout_marginRight="12dip"
                android:layout_marginTop="0dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <View
                android:background="@color/bg_blue"
                android:layout_width="match_parent"
                android:layout_height="1dip"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tvUserName"
                android:textColor="@color/text_black"
                android:paddingTop="14dip"
                android:paddingBottom="14dip"
                android:paddingEnd="6dip"
                android:paddingStart="6dip"
                android:textSize="14sp"
                android:background="@color/white"
                android:layout_marginEnd="12dip"
                android:layout_marginStart="12dip"
                android:layout_marginLeft="12dip"
                android:layout_marginRight="12dip"
                android:layout_marginTop="0dip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <View
                android:background="@color/bg_blue"
                android:layout_width="match_parent"
                android:layout_height="1dip"/>
            <TextView
                android:id="@+id/tvCardNumber"
                android:textColor="@color/text_black"
                android:paddingTop="14dip"
                android:paddingBottom="14dip"
                android:paddingEnd="6dip"
                android:paddingStart="6dip"
                android:textSize="14sp"
                android:background="@color/white"
                android:layout_marginEnd="12dip"
                android:layout_marginStart="12dip"
                android:layout_marginLeft="12dip"
                android:layout_marginRight="12dip"
                android:layout_marginTop="0dip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <View
                android:background="@color/bg_blue"
                android:layout_width="match_parent"
                android:layout_height="1dip"/>
            <TextView
                android:id="@+id/tvBankName"
                android:textColor="@color/text_black"
                android:paddingTop="14dip"
                android:paddingBottom="14dip"
                android:paddingEnd="6dip"
                android:paddingStart="6dip"
                android:textSize="14sp"
                android:background="@color/white"
                android:layout_marginEnd="12dip"
                android:layout_marginStart="12dip"
                android:layout_marginLeft="12dip"
                android:layout_marginRight="12dip"
                android:layout_marginTop="0dip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <View
                android:background="@color/bg_blue"
                android:layout_width="match_parent"
                android:layout_height="1dip"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:background="@color/bg_blue"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <TextView
        android:visibility="gone"
        android:id="@+id/tvUnbind"
        android:text="解除绑定"
        android:textColor="@color/text_blue"
        android:layout_gravity="center"
        android:gravity="center"
        android:paddingTop="12dip"
        android:paddingBottom="12dip"
        android:paddingEnd="32dip"
        android:paddingStart="32dip"
        android:background="@drawable/shape_bg_rectangle_blue_stroke_small"
        android:layout_marginStart="24dip"
        android:layout_marginEnd="24dip"
        android:layout_marginTop="32dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    </LinearLayout>

</LinearLayout>