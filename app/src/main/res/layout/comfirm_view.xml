<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/transparent"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <LinearLayout
        android:background="@drawable/shape_rect_angle_white_bg"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:layout_marginEnd="50dip"
        android:layout_marginStart="50dip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:paddingTop="16dip"
            android:paddingBottom="12dip"
            android:text="提示"
            android:textColor="@color/text_black"
            android:textSize="16sp" />
        <View
            android:background="@color/divider_grey"
            android:layout_width="match_parent"
            android:layout_height="1dip"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:paddingTop="16dip"
            android:paddingBottom="12dip"
            android:text="您确定要解除此银行卡的\n绑定吗？"
            android:textColor="@color/text_black"
            android:textSize="14sp" />

        <RelativeLayout
            android:layout_marginBottom="24dip"
            android:layout_marginTop="10dip"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tvConfirm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dip"
                android:background="@drawable/shape_rect_angle_sky_blue_bg"
                android:layout_alignParentStart="true"
                android:gravity="center"
                android:paddingStart="46dip"
                android:paddingEnd="46dip"
                android:paddingBottom="12dip"
                android:paddingTop="12dip"
                android:text="确定"
                android:textColor="@color/white"
                android:textSize="14sp" />
            <TextView
                android:id="@+id/tvCancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="20dip"
                android:background="@drawable/shape_bg_rectangle_light_blue_stroke"
                android:gravity="center"
                android:paddingStart="46dip"
                android:paddingEnd="46dip"
                android:paddingBottom="12dip"
                android:paddingTop="12dip"
                android:text="取消"
                android:textColor="@color/text_blue"
                android:textSize="14sp" />

        </RelativeLayout>
    </LinearLayout>


</RelativeLayout>