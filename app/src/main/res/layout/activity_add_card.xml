<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".ui.center.AddCardActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white">
    <include layout="@layout/title_bar_layout"/>

    <TextView
        android:text="请绑定持卡人本人的银行卡"
        android:paddingTop="12dip"
        android:paddingBottom="12dip"
        android:paddingEnd="6dip"
        android:paddingStart="14dip"
        android:textSize="14sp"
        android:gravity="start"
        android:textColor="@color/text_black"
        android:background="@color/bg_blue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:id="@+id/llCard"
        android:layout_marginTop="10dip"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:text="持卡人"
                android:paddingTop="6dip"
                android:paddingBottom="6dip"
                android:paddingEnd="6dip"
                android:paddingStart="6dip"
                android:textSize="12sp"
                android:gravity="end"
                android:textColor="@color/text_black"
                android:background="@color/white"
                android:layout_marginEnd="12dip"
                android:layout_marginStart="12dip"
                android:layout_marginLeft="12dip"
                android:layout_marginRight="12dip"
                android:layout_marginTop="8dip"
                android:layout_marginBottom="8dip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <View
                android:background="@color/divider_grey"
                android:layout_marginStart="12dip"
                android:layout_marginLeft="12dip"
                android:layout_width="match_parent"
                android:layout_height="1dip"/>
            <TextView
                android:text="银行卡号"
                android:paddingTop="6dip"
                android:paddingBottom="6dip"
                android:paddingEnd="6dip"
                android:paddingStart="6dip"
                android:textSize="12sp"
                android:gravity="end"
                android:textColor="@color/text_black"
                android:background="@color/white"
                android:layout_marginEnd="12dip"
                android:layout_marginStart="12dip"
                android:layout_marginLeft="12dip"
                android:layout_marginRight="12dip"
                android:layout_marginTop="8dip"
                android:layout_marginBottom="8dip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <View
                android:background="@color/divider_grey"
                android:layout_marginStart="12dip"
                android:layout_marginLeft="12dip"
                android:layout_width="match_parent"
                android:layout_height="1dip"/>
            <TextView
                android:text="查询开户行名称"
                android:paddingTop="6dip"
                android:paddingBottom="6dip"
                android:paddingEnd="6dip"
                android:paddingStart="6dip"
                android:textSize="12sp"
                android:gravity="end"
                android:textColor="@color/text_black"
                android:background="@color/white"
                android:layout_marginEnd="12dip"
                android:layout_marginStart="12dip"
                android:layout_marginLeft="12dip"
                android:layout_marginRight="12dip"
                android:layout_marginTop="8dip"
                android:layout_marginBottom="8dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <View
                android:background="@color/divider_grey"
                android:layout_marginStart="12dip"
                android:layout_marginLeft="12dip"
                android:layout_width="match_parent"
                android:layout_height="1dip"/>


        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/tvUserName"
                android:hint="输入持卡人姓名"
                android:paddingTop="6dip"
                android:paddingBottom="6dip"
                android:paddingEnd="6dip"
                android:paddingStart="6dip"
                android:textSize="12sp"
                android:maxLines="1"
                android:maxLength="30"
                android:inputType="textPersonName"
                android:background="@color/white"
                android:layout_marginEnd="12dip"
                android:layout_marginStart="12dip"
                android:layout_marginLeft="12dip"
                android:layout_marginRight="12dip"
                android:layout_marginTop="8dip"
                android:layout_marginBottom="8dip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <View
                android:background="@color/divider_grey"
                android:layout_marginEnd="12dip"
                android:layout_marginRight="12dip"
                android:layout_width="match_parent"
                android:layout_height="1dip"/>
            <EditText
                android:id="@+id/tvCardNumber"
                android:hint="输入银行卡号"
                android:paddingTop="6dip"
                android:paddingBottom="6dip"
                android:paddingEnd="6dip"
                android:paddingStart="6dip"
                android:textSize="12sp"
                android:maxLines="1"
                android:maxLength="30"
                android:inputType="number"
                android:background="@color/white"
                android:layout_marginEnd="12dip"
                android:layout_marginStart="12dip"
                android:layout_marginLeft="12dip"
                android:layout_marginRight="12dip"
                android:layout_marginTop="8dip"
                android:layout_marginBottom="8dip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <View
                android:background="@color/divider_grey"
                android:layout_marginEnd="12dip"
                android:layout_marginRight="12dip"
                android:layout_width="match_parent"
                android:layout_height="1dip"/>
            <RelativeLayout
                android:gravity="center_vertical"
                android:layout_marginStart="12dip"
                android:layout_marginLeft="12dip"
                android:layout_marginTop="8dip"
                android:layout_marginBottom="8dip"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/tvBankName"
                    android:hint="请输入开户行的关键字"
                    android:paddingTop="6dip"
                    android:paddingBottom="6dip"
                    android:paddingEnd="6dip"
                    android:paddingStart="6dip"
                    android:textSize="12sp"
                    android:maxLines="1"
                    android:maxLength="30"
                    android:inputType="text"
                    android:layout_alignParentStart="true"
                    android:layout_gravity="center_vertical"
                    android:background="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/tvMoreNames"
                    android:text="智能识别"
                    android:gravity="center"
                    android:textSize="12sp"
                    android:paddingBottom="6dip"
                    android:paddingTop="6dip"
                    android:paddingStart="14dip"
                    android:paddingEnd="14dip"
                    android:layout_alignParentEnd="true"
                    android:layout_gravity="center_vertical|end"
                    android:background="@drawable/shape_bg_rectangle_blue_stroke_small"
                    android:textColor="@color/light_sky_blue"
                    android:layout_marginEnd="6dip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>

            <View
                android:background="@color/divider_grey"
                android:layout_marginEnd="12dip"
                android:layout_marginRight="12dip"
                android:layout_width="match_parent"
                android:layout_height="1dip"/>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/llResult"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="开户行全称"
            android:paddingTop="6dip"
            android:paddingBottom="6dip"
            android:paddingEnd="6dip"
            android:paddingStart="6dip"
            android:textSize="12sp"
            android:gravity="end"
            android:maxLines="1"
            android:textColor="@color/text_black"
            android:background="@color/white"
            android:layout_marginEnd="0dip"
            android:layout_marginStart="30dip"
            android:layout_marginTop="8dip"
            android:layout_marginBottom="8dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tvShowBranchName"
            android:text="请选择"
            android:paddingTop="6dip"
            android:paddingBottom="6dip"
            android:paddingEnd="6dip"
            android:paddingStart="6dip"
            android:textSize="12sp"
            android:gravity="center"
            android:background="@color/white"
            android:layout_marginEnd="12dip"
            android:layout_marginStart="12dip"
            android:layout_marginLeft="12dip"
            android:layout_marginRight="12dip"
            android:layout_marginTop="8dip"
            android:layout_marginBottom="8dip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
            <View
                android:background="@color/divider_grey"
                android:layout_marginEnd="12dip"
                android:layout_marginRight="12dip"
                android:layout_width="match_parent"
                android:layout_height="1dip"/>

            <TextView
            android:id="@+id/tvShowBranchName2"
            android:text=""
            android:paddingTop="6dip"
            android:paddingBottom="6dip"
            android:paddingEnd="6dip"
            android:paddingStart="6dip"
            android:textSize="12sp"
            android:gravity="center"
            android:background="@color/white"
            android:layout_marginEnd="12dip"
            android:layout_marginStart="12dip"
            android:layout_marginLeft="12dip"
            android:layout_marginRight="12dip"
            android:layout_marginTop="8dip"
            android:layout_marginBottom="8dip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
            <View
                android:background="@color/divider_grey"
                android:layout_marginEnd="12dip"
                android:layout_marginRight="12dip"
                android:layout_width="match_parent"
                android:layout_height="1dip"/>

            <TextView
                android:id="@+id/tvShowBankCity"
                android:text=""
                android:paddingTop="6dip"
                android:paddingBottom="6dip"
                android:paddingEnd="6dip"
                android:paddingStart="6dip"
                android:textSize="12sp"
                android:gravity="center"
                android:background="@color/white"
                android:layout_marginEnd="12dip"
                android:layout_marginStart="12dip"
                android:layout_marginLeft="12dip"
                android:layout_marginRight="12dip"
                android:layout_marginTop="8dip"
                android:layout_marginBottom="8dip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:gravity="center_horizontal"
        android:background="@color/bg_blue"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
        <Button
            android:id="@+id/btBindCard"
            android:text="确认添加"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:background="@drawable/shape_rect_angle_sky_blue_bg"
            android:paddingTop="12dip"
            android:paddingBottom="12dip"
            android:layout_marginTop="20dip"
            android:layout_marginEnd="20dip"
            android:layout_marginStart="20dip"
            android:layout_marginLeft="20dip"
            android:layout_marginRight="20dip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rlList"
        android:visibility="gone"
        android:background="@android:color/transparent"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvBranchBank"
            android:layout_marginTop="40dip"
            android:layout_alignParentBottom="true"
            android:background="@drawable/shape_rect_angle_white_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

</RelativeLayout>