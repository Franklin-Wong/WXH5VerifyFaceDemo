<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.login.ResetPwdActivity">
    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:src="@mipmap/ic_launcher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/etPhoneNumber"
            android:hint="请您输入手机号码"
            android:padding="10dip"
            android:maxLines="1"
            android:inputType="phone"
            android:textSize="14sp"
            android:drawableStart="@mipmap/ic_phone"
            android:drawablePadding="4dip"
            android:background="@color/white"
            android:layout_marginEnd="24dip"
            android:layout_marginStart="24dip"
            android:layout_marginLeft="24dip"
            android:layout_marginRight="24dip"
            android:layout_marginTop="40dip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <View
            android:background="@color/divider_grey"
            android:layout_marginEnd="24dip"
            android:layout_marginStart="24dip"
            android:layout_marginLeft="24dip"
            android:layout_marginRight="24dip"
            android:layout_width="match_parent"
            android:layout_height="1dip"/>

        <EditText
            android:id="@+id/etPwd"
            android:hint="请您输入密码（长度6-15位,包含字母和数字）"
            android:padding="10dip"
            android:maxLines="1"
            android:textSize="14sp"
            android:drawableStart="@mipmap/ic_pwd"
            android:drawablePadding="4dip"
            android:inputType="textPassword"
            android:background="@color/white"
            android:layout_marginEnd="24dip"
            android:layout_marginStart="24dip"
            android:layout_marginLeft="24dip"
            android:layout_marginRight="24dip"
            android:layout_marginTop="10dip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <View
            android:background="@color/divider_grey"
            android:layout_marginEnd="24dip"
            android:layout_marginStart="24dip"
            android:layout_marginLeft="24dip"
            android:layout_marginRight="24dip"
            android:layout_width="match_parent"
            android:layout_height="1dip"/>

        <EditText
            android:id="@+id/etPwd2"
            android:hint="请您再次输入密码"
            android:padding="10dip"
            android:maxLines="1"
            android:textSize="14sp"
            android:drawableStart="@mipmap/ic_pwd"
            android:drawablePadding="4dip"
            android:inputType="textPassword"
            android:background="@color/white"
            android:layout_marginEnd="24dip"
            android:layout_marginStart="24dip"
            android:layout_marginLeft="24dip"
            android:layout_marginRight="24dip"
            android:layout_marginTop="10dip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <View
            android:background="@color/divider_grey"
            android:layout_marginEnd="24dip"
            android:layout_marginStart="24dip"
            android:layout_marginLeft="24dip"
            android:layout_marginRight="24dip"
            android:layout_width="match_parent"
            android:layout_height="1dip"/>

        <RelativeLayout
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"            android:layout_marginEnd="24dip"
            android:layout_marginStart="24dip"
            android:layout_marginLeft="24dip"
            android:layout_marginRight="24dip"
            android:layout_marginTop="10dip">
            <EditText
                android:id="@+id/etMessageCode"
                android:hint="请您输入短信验证码"
                android:padding="10dip"
                android:maxLines="1"
                android:inputType="number"
                android:textSize="14sp"
                android:drawableStart="@mipmap/ic_message"
                android:drawablePadding="4dip"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tvGetCode"
                android:textSize="12sp"
                android:textColor="@color/text_blue"
                android:text="获取"
                android:gravity="center"
                android:background="@drawable/shape_bg_rectangle_blue_stroke_small"
                android:padding="6dip"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
        <View
            android:background="@color/divider_grey"
            android:layout_marginEnd="24dip"
            android:layout_marginStart="24dip"
            android:layout_marginLeft="24dip"
            android:layout_marginRight="24dip"
            android:layout_width="match_parent"
            android:layout_height="1dip"/>

        <Button
            android:id="@+id/btReset"
            android:text="立即重置"
            android:gravity="center"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:background="@drawable/shape_rect_angle_sky_blue_bg"
            android:layout_marginTop="28dip"
            android:layout_marginEnd="24dip"
            android:layout_marginStart="24dip"
            android:layout_marginLeft="24dip"
            android:layout_marginRight="24dip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_marginTop="30dip"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="已有账号"
            android:padding="2dip"
            android:textSize="14sp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tvLogin"
            android:text="立即登录"
            android:textColor="@color/text_sky_blue"
            android:padding="2dip"
            android:textSize="14sp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    </LinearLayout>
</LinearLayout>






