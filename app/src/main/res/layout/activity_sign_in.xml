<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.login.SignInActivity">
    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:src="@mipmap/ic_launcher_round"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/etPhoneNumber"
            android:hint="请您输入手机号码"
            android:padding="10dip"
            android:maxLines="1"
            android:inputType="phone"
            android:textSize="14sp"
            android:drawableStart="@mipmap/ic_phone"
            android:drawablePadding="4dip"
            android:background="@color/white"
            android:layout_marginEnd="24dip"
            android:layout_marginStart="24dip"
            android:layout_marginLeft="24dip"
            android:layout_marginRight="24dip"
            android:layout_marginTop="40dip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <View
            android:background="@color/divider_grey"
            android:layout_marginEnd="24dip"
            android:layout_marginStart="24dip"
            android:layout_marginLeft="24dip"
            android:layout_marginRight="24dip"
            android:layout_width="match_parent"
            android:layout_height="1dip"/>

        <RelativeLayout
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dip"
            android:layout_marginStart="24dip"
            android:layout_marginLeft="24dip"
            android:layout_marginRight="24dip"
            android:layout_marginTop="0dip">
            <EditText
                android:id="@+id/etMessageCode"
                android:hint="请您输入登录密码"
                android:padding="10dip"
                android:maxLines="1"
                android:inputType="textPassword"
                android:textSize="14sp"
                android:drawableStart="@mipmap/ic_pwd"
                android:drawablePadding="4dip"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:visibility="gone"
                android:id="@+id/tvGetCode"
                android:textSize="14sp"
                android:textColor="@color/text_blue"
                android:gravity="center"
                android:text="获取"
                android:background="@drawable/shape_bg_rectangle_blue_stroke_small"
                android:padding="6dip"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
        <View
            android:background="@color/divider_grey"
            android:layout_marginEnd="24dip"
            android:layout_marginStart="24dip"
            android:layout_marginLeft="24dip"
            android:layout_marginRight="24dip"
            android:layout_width="match_parent"
            android:layout_height="1dip"/>

        <Button
            android:id="@+id/btSignIn"
            android:text="登录"
            android:textColor="@color/white"
            android:background="@drawable/shape_rect_angle_sky_blue_bg"
            android:gravity="center"
            android:textSize="14sp"
            android:layout_marginTop="8dip"
            android:layout_marginEnd="24dip"
            android:layout_marginStart="24dip"
            android:layout_marginLeft="24dip"
            android:layout_marginRight="24dip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <RelativeLayout
            android:layout_marginEnd="24dip"
            android:layout_marginStart="24dip"
            android:layout_marginLeft="24dip"
            android:layout_marginRight="24dip"
            android:layout_marginTop="8dip"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tvLoginPwd"
                android:text="短信验证码登录"
                android:textColor="@color/text_black"
                android:padding="6dip"
                android:textSize="14sp"
                android:gravity="start"
                android:layout_alignParentStart="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tvReset"
                android:text="重置密码"
                android:textColor="@color/text_black"
                android:padding="6dip"
                android:textSize="14sp"
                android:gravity="center"
                android:layout_alignParentEnd="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_marginTop="30dip"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                android:background="@color/bar_grey"
                android:layout_width="42dip"
                android:layout_height="0.5dip" />
            <TextView
                android:text="没有账号？"
                android:textColor="@color/text_black"
                android:padding="2dip"
                android:textSize="14sp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginStart="10dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tvSignUp"
                android:text="立即注册"
                android:textColor="@color/text_sky_blue"
                android:padding="2dip"
                android:textSize="14sp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginEnd="10dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <View
                android:background="@color/bar_grey"
                android:layout_width="42dip"
                android:layout_height="0.5dip" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>






