<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".ui.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="120dip"
            android:gravity="center_vertical">

            <ImageView
                android:layout_alignParentTop="true"
                android:src="@mipmap/ic_blue_head"
                android:scaleType="centerCrop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginStart="24dip"
                android:layout_marginTop="10dip"
                android:layout_marginBottom="10dip"
                android:gravity="center"
                android:padding="8dip"
                android:text="员工姓名"
                android:textColor="@color/white"
                android:textSize="16sp" />
            <ImageView
                android:id="@+id/ivVerify"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dip"
                android:layout_marginTop="16dip"
                android:layout_toEndOf="@+id/tvName"
                android:gravity="center"
                android:padding="0dip"/>

            <TextView
                android:id="@+id/tvVerify"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dip"
                android:layout_marginTop="14dip"
                android:layout_marginBottom="10dip"
                android:layout_toEndOf="@+id/ivVerify"
                android:gravity="center"
                android:padding="8dip"
                android:textColor="@color/white"
                android:text=""
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tvUserCenter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="18dip"
                android:layout_marginBottom="10dip"
                android:layout_marginEnd="24dip"
                android:background="@drawable/shape_bg_rectangle_white_stroke"
                android:gravity="center"
                android:paddingStart="24dip"
                android:paddingTop="4dip"
                android:paddingEnd="24dip"
                android:paddingBottom="4dip"
                android:text="我的"
                android:textColor="@color/white"
                android:textSize="14sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="220dip"
                android:layout_marginStart="12dip"
                android:layout_marginTop="80dip"
                android:layout_marginEnd="12dip"
                android:background="@mipmap/ic_main_golden"
                android:scaleType="fitCenter" />

        </RelativeLayout>
    </RelativeLayout>
    <androidx.cardview.widget.CardView
        android:id="@+id/signContract"
        android:background="@drawable/shape_btn_white_oval_solid"
        app:contentPadding="2dip"
        app:cardCornerRadius="30dip"
        android:layout_marginStart="12dip"
        android:layout_marginEnd="12dip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
        android:layout_marginTop="2dip"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tvUserContract"
            android:textColor="@color/text_black"
            android:textSize="14sp"
            android:gravity="center"
            android:padding="4dip"
            android:drawableStart="@mipmap/ic_tips"
            android:drawablePadding="6dip"
            android:layout_marginStart="12dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tvUserTips"
            android:text=""
            android:ellipsize="end"
            android:textColor="@color/text_black"
            android:textSize="14sp"
            android:gravity="center"
            android:padding="8dip"
            android:layout_gravity="center_vertical|end"
            android:layout_marginStart="24dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    </androidx.cardview.widget.CardView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="170dip"
        android:background="@mipmap/bg_income"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dip"
            android:layout_marginTop="12dip"
            android:layout_marginEnd="10dip"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="24dip"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:padding="8dip"
                    android:text="我的收入"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tvIncomeDetails"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="10dip"
                    android:layout_marginEnd="24dip"
                    android:layout_marginBottom="10dip"
                    android:background="@drawable/shape_bg_rectangle_light_blue_stroke"
                    android:padding="6dip"
                    android:paddingStart="24dip"
                    android:paddingEnd="24dip"
                    android:text="查看明细"
                    android:textColor="@color/text_blue"
                    android:textSize="14sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dip"
                    android:layout_below="@+id/tvIncomeDetails"
                    android:background="@color/divider_grey" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dip"
            android:layout_marginEnd="10dip"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="24dip">

                    <TextView
                        android:id="@+id/tvIncomeAnnual"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="24dip"
                        android:gravity="center"
                        android:padding="4dip"
                        android:text="0.0"
                        android:textColor="@color/text_blue"
                        android:textSize="30sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tvIncomeAnnual"
                        android:layout_marginStart="24dip"
                        android:gravity="center"
                        android:padding="2dip"
                        android:text="本年累计收入（元）"
                        android:textColor="@color/text_black"
                        android:textSize="12sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="24dip">

                    <TextView
                        android:id="@+id/tvIncomeMonthly"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="24dip"
                        android:gravity="center"
                        android:padding="4dip"
                        android:text="0.0"
                        android:textColor="@color/text_blue"
                        android:textSize="30sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tvIncomeMonthly"
                        android:layout_marginStart="24dip"
                        android:gravity="center"
                        android:padding="2dip"
                        android:text="本月收入（元）"
                        android:textColor="@color/text_black"
                        android:textSize="12sp" />
                </RelativeLayout>

            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>



</LinearLayout>